<div class="container">
		<% if flash[:alert] %>
				<p id="notice"><%= flash[:alert] %></p>
		<% end %>

		<%= form_tag(class:'form-signin') do %>
					          <h2 class="form-signin-heading">后台管理登陆</h2>
							  <%= text_field_tag	:name,	params[:name],	placeholder:'用户名',class:'form-control' %>
							  <%= password_field_tag	:password,	params[:password],	placeholder:'密码',class:'form-control' %>
											  <%= submit_tag "Login", class:'btn btn-lg btn-primary btn-block' %>
									  <% end %>
																							      </div>
